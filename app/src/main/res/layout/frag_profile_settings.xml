<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_img_view"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/avatar_img"
        app:civ_border_color="@color/colorPrimaryDark"
        android:layout_marginTop="50dp"
        app:civ_border_width="2dp" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/profile_pic_edit_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:text="EDIT"
        android:textSize="20sp"
        android:textColor="@android:color/holo_blue_bright"
        android:textStyle="bold"
        android:layout_toRightOf="@+id/profile_img_view"
        android:layout_below="@+id/profile_img_view"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/profile_user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_pic_edit_view"
        android:text="User Name: "
        android:gravity="center_horizontal"
        android:layout_marginTop="35dp"
        android:textSize="20sp"/>

</RelativeLayout>